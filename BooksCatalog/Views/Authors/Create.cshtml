@model BooksCatalog.Models.AuthorModel

@{
    ViewData["Title"] = "Створення автору";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h4>Деталі</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="Name" class="control-label">Ім'я</label>
                <input asp-for="Name" class="form-control mt-2" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Додати" class="btn btn-md btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-md btn-warning mt-5" asp-action="Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
