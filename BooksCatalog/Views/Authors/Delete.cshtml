@model BooksCatalog.Models.AuthorModel

@{
    ViewData["Title"] = "Видалення";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Ви впевнені у цьому на всі 100%?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ім'я
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger btn-md" /> |
        <a class="btn btn-md btn-warning" asp-action="Index">Назад</a>
    </form>
</div>
