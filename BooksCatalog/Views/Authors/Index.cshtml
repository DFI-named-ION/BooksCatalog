@model IEnumerable<BooksCatalog.Models.AuthorModel>

@{
    ViewData["Title"] = "Список авторів";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-md btn-info" asp-action="Create">Додати нового</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Ім'я
            </th>
            <th>
                Автор таких книг
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <p>
                        @if (item.Books != null)
                        {
                            foreach (var book in item.Books)
                            {
                                <span>@book.Title,</span>
                            }
                        }
                    </p>
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
