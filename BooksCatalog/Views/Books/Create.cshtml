@model BooksCatalog.Models.BookModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Створення книжки</h1>

<h4>Деталі</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="Title" class="control-label">Назва</label>
                <input required asp-for="Title" class="form-control mt-2" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Genre" class="control-label">Жанр</label>
                <input required asp-for="Genre" class="form-control mt-2" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Author" class="control-label">Автор</label>
                <select required asp-for="Author.Id" class="form-control mt-2">
                    <option hidden>Выберите автора</option>
                    @foreach (var author in ViewBag.Authors)
                    {
                        <option value="@author.Id">@author.Name</option>
                    }
                </select>
                <span asp-validation-for="Author.Id" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Додати" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-md btn-warning mt-5" asp-action="Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
